#!/bin/bash

set -o errexit

DATA_PATH="$HOME/.sshm"
DATA_FILE="$HOME/.sshm/.data"

function update_data_file()
{
  now=$(date +%s)
  count=$(sed -n "/[[:digit:]] [[:digit:]] $1$/p" $DATA_FILE | awk '{print $2}')
  if [[ -z $count ]]; then
    echo "$now 1 $1" >> $DATA_FILE
  else
    count=$(expr $count + 1)
    sed -ri "s/^[[:digit:]]+ [[:digit:]]+ $1$/$now $count $1/g" $DATA_FILE
    sort -nr $DATA_FILE -o $DATA_FILE
  fi
}


if [[ ! -d "$DATA_PATH" ]]; then
  echo "$DATA_PATH doesn't exist."
  mkdir -p $DATA_PATH
fi

if [[ ! -e $DATA_FILE ]]; then
  echo "$DATA_FILE doesn't exist"
  touch $DATA_FILE
fi

if [[ -n $1 ]]; then
  update_data_file "$*"
else
  echo "You need transfer an argument to this script."
fi
